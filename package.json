{
  "name": "strest",
  "displayName": "stREST Client",
  "description": "stREST Client for Visual Studio Code",
  "version": "0.1.2",
  "publisher": "jgroom",
  "author": {
    "name": "Jeff Groom",
    "email": "jgroom33@outlook.com"
  },
  "icon": "images/strest.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgroom33/vscode-strest-client/issues",
    "email": "jgroom33@outlook.com"
  },
  "homepage": "https://github.com/jgroom33/vscode-strest-client/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgroom33/vscode-strest-client.git"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "REST",
    "Http",
    "strest"
  ],
  "activationEvents": [
    "onLanguage:strest"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "strest",
        "aliases": [
          "stREST",
          "STREST"
        ],
        "extensions": [
          ".strest.yml",
          ".strest.yaml"
        ],
        "configuration": "./language-configuration-strest.json"
      }
    ],
    "grammars": [
      {
        "language": "strest",
        "scopeName": "source.strest.yaml",
        "path": "./syntaxes/strest.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "strest",
        "path": "./snippets/strest.json"
      }
    ],
    "commands": [
      {
        "command": "strest.request",
        "title": "Execute stREST Call",
        "icon": {
          "light": "./images/strest-icon.png",
          "dark": "./images/strest-icon.png"
        }
      },
      {
        "command": "strest.curlToStrest",
        "title": "curl (clipboard) to strest",
        "icon": {
          "light": "./images/strest-icon.png",
          "dark": "./images/strest-icon.png"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == strest",
          "command": "strest.curlToStrest",
          "group": "stREST"
        },
        {
          "when": "resourceLangId == strest",
          "command": "strest.request",
          "group": "stREST"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == strest",
          "command": "strest.request",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "strest.request",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && editorLangId == 'strest'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "REST Client configuration",
      "properties": {}
    },
    "configurationDefaults": {
      "[strest]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^4.1.0",
    "typescript": "^2.2.32",
    "vscode": "^1.0.17"
  },
  "dependencies": {
    "curlconverter": "2.4.0",
    "clipboardy": "1.2.3",
    "fs-extra": "7.0.1",
    "js-yaml": "3.12.1"
  }
}
